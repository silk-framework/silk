<?xml version="1.0" encoding="utf-8" ?>
<Silk>
    <Prefixes>
       <Prefix id="rdf" namespace="http://www.w3.org/1999/02/22-rdf-syntax-ns#" />
       <Prefix id="rdfs" namespace="http://www.w3.org/2000/01/rdf-schema#" />
       <Prefix id="foaf" namespace="http://xmlns.com/foaf/0.1/" />
       <Prefix id="owl" namespace="http://www.w3.org/2002/07/owl#" />
       <Prefix id="dbpedia-owl" namespace="http://dbpedia.org/ontology/" />
       <Prefix id="dbpedia" namespace="http://dbpedia.org/resource/" />
       <Prefix id="dbpedia-prop" namespace="http://dbpedia.org/property/" />
       <Prefix id="dc" namespace="http://purl.org/dc/terms/" />
       <Prefix id="tcm" namespace="http://purl.org/net/tcm/tcm.lifescience.ntu.edu.tw/" />
       <Prefix id="opencyc" namespace="http://sw.opencyc.org/2008/06/10/concept/" />
       <Prefix id="diseasome" namespace="http://www4.wiwiss.fu-berlin.de/diseasome/resource/diseasome/" />
       <Prefix id="linkedct" namespace="http://data.linkedct.org/resource/linkedct/" />
    </Prefixes>

    <DataSources>
        <DataSource id="tcm" type="sparqlEndpoint">
            <Param name="endpointURI" value="http://www.open-biomed.org.uk/sparql" />
            <Param name="graph" value="http://purl.org/net/data/tcm/tcm-20090619" />
        </DataSource>

        <DataSource id="linkedct" type="sparqlEndpoint">
            <Param name="endpointURI" value="http://data.linkedct.org/sparql" />
        </DataSource>
    </DataSources>

	<Interlinks>
        <Interlink id="organization">
            <LinkType>owl:sameAs</LinkType>

            <SourceDataset dataSource="linkedct" var="a">
                <RestrictTo>
                    ?a rdf:type linkedct:intervention
                </RestrictTo>
            </SourceDataset>

            <TargetDataset dataSource="tcm" var="b">
                <RestrictTo>
                    ?b rdf:type tcm:Medicine
                </RestrictTo>
            </TargetDataset>

            <LinkCondition>
                <Aggregate type="max">
                    <Compare metric="jaroWinkler">
                        <TransformInput function="lowerCase">
                            <Input path="?a/linkedct:intervention_name" />
                        </TransformInput>
                        <TransformInput function="lowerCase">
                            <Input path="?b/rdfs:label" />
                        </TransformInput>
                    </Compare>
                </Aggregate>
            </LinkCondition>

            <Filter threshold="0.95" />

            <Outputs>
                <Output type="file">
                  <Param name="maxConfidence" value="0.97" />
                  <Param name="file" value="tcm_linkedct_drugs_verify_links.xml"/>
                  <Param name="format" value="alignment"/>
                </Output>
                <Output type="file">
                  <Param name="minConfidence" value="0.97" />
                  <Param name="file" value="tcm_linkedct_drugs_accepted_links.xml"/>
                  <Param name="format" value="alignment"/>
                </Output>
            </Outputs>
        </Interlink>
    </Interlinks>
</Silk>
